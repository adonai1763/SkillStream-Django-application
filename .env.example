# Environment Variables for SkillStream Project
# Copy this file to .env and fill in your actual values

# Django Settings
SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=True
DJANGO_SETTINGS_MODULE=config.settings.development

# Database Configuration
# For development (SQLite is used by default)
# For production (PostgreSQL)
DB_NAME=skillstream_db
DB_USER=skillstream_user
DB_PASSWORD=your-db-password
DB_HOST=localhost
DB_PORT=5432

# Allowed Hosts (comma-separated for production)
ALLOWED_HOSTS=localhost,127.0.0.1,yourdomain.com

# Email Configuration (for production)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-email-password
DEFAULT_FROM_EMAIL=noreply@skillstream.com

# Redis Configuration (for production caching)
REDIS_URL=redis://127.0.0.1:6379/1

# AWS S3 Configuration (for production file storage)
USE_S3=False
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_STORAGE_BUCKET_NAME=your-s3-bucket-name
AWS_S3_REGION_NAME=us-east-1

# Sentry Configuration (for production error tracking)
SENTRY_DSN=your-sentry-dsn-url

# Social Authentication (optional)
GOOGLE_OAUTH2_KEY=your-google-oauth2-key
GOOGLE_OAUTH2_SECRET=your-google-oauth2-secret

# Development Tools
DJANGO_DEBUG_TOOLBAR=True